{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "strict": true
  },
  "include": ["src/**/*.ts", "src/app/index.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true
  }
}